@model Artist

@{
    ViewData["Title"] = "Details of the Artist";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card bg-dark text-white border-purple shadow-lg">
                <div class="card-header text-center bg-gradient">
                    <h2 class="text-purple mb-0">@Model.FullName</h2>
                </div>
                <div class="card-body d-flex align-items-center">
                    <div class="image-container me-4">
                        <img src="@Model.ProfilePictureUrl" alt="@Model.FullName" class="img-fluid border-purple" style="width: 1100px; height: 300px; object-fit: cover;">
                    </div>
                    <div class="biography-container">
                        <p class="card-text mb-2" style="font-size: 1.2rem;">
                            <strong>Biography:</strong>
                        <p>@Model.Bio</p>
                        </p>
                    </div>
                </div>
                <div class="card-footer" style="display: flex; justify-content: space-between; padding-left: 20px; padding-right: 20px;">
                    <a class="btn btn-outline-secondary" asp-controller="Song" asp-route-id="@Model.Id" asp-action="ArtistSongs">Songs</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All Artists</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: url(https://www.shutterstock.com/image-vector/musical-notes-symbols-flying-vector-260nw-1418398847.jpg);
        color: #FFFFFF; /* White text */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }

    .text-purple {
        color: #9B59B6; /* Purple color */
    }

    .bg-gradient {
        background: linear-gradient(135deg, #9B59B6, #E6E6FA);
    }

    .bg-purple, .btn-purple, .border-purple {
        background-color: #E6E6FA; /* Purple color */
        border-color: #9B59B6;
        color: #9B59B6;
    }

    .btn-outline-purple {
        color: #FFFFFF;
        background-color: #9B59B6; /* Purple background */
        border-color: #9B59B6;
    }

        .btn-outline-purple:hover {
            background-color: #8e44ad;
            color: #FFFFFF;
        }

    .card {
        background-color: #1C1C1C; /* Darker card background */
        color: #FFFFFF; /* White text */
        border: 1px solid #9B59B6;
        border-radius: 3px; /* Rounded corners */
    }

    .square-card {
        border: 1px solid #9B59B6;
    }

    .card-header {
        background-color: #333; /* Dark header background */
        border-bottom: 1px solid #9B59B6;
        padding: 15px;
    }

    .img-fluid {
        border-radius: 5px; /* Rectangle image with slight rounded corners */
        border: 3px solid #E6E6FA;
    }

    .card-body {
        padding: 20px;
        text-align: left;
    }

    .badge {
        background-color: #9B59B6; /* Purple badge */
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .btn-purple {
        border-radius: 20px;
    }

    .btn-outline-purple {
        color: #9B59B6;
        border-radius: 20px;
    }

    .card-footer {
        background-color: #1C1C1C; /* Dark footer background */
        border-top: 1px solid black;
        padding: 10px;
    }
</style>
