@model Song

@{
    ViewData["Title"] = "Details for the Song";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card bg-dark text-white border-purple shadow-lg">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="text-purple mb-0">@Model.Name</h2>
                    <div class="d-flex">
                        <a class="btn btn-outline-success me-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                    </div>
                </div>
                <div class="card-body" style="padding: 25px; padding-bottom: 0px;">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded border-purple mb-3" style="max-height: 300px;">
                        </div>
                        <div class="col-md-8">
                            <p class="card-text mb-2">
                                <strong>Artists:</strong>
                                @foreach (var artist in Model.Artists_Songs)
                                {
                                    <span class="badge bg-secondary me-1">@artist.Artist.FullName</span>
                                }
                            </p>
                            <p class="card-text mb-2"><strong>Description:</strong> @Model.Description</p>
                            <p class="card-text mb-2"><strong>Genre:</strong> @Model.Genre</p>
                            <p class="card-text mb-2"><strong>Album:</strong> @Model.Album.Name</p>
                            <p class="card-text mb-2"><strong>Music House:</strong> @Model.MusicHouse.Name</p>
                            <p class="card-text mb-2"><strong>Release Date:</strong> @Model.Date.ToString("dd MMM yyyy")</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between" style="padding: 25px;">
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All Songs</a>
                    <a class="btn btn-purple d-flex align-items-center justify-content-center" style="width: 130px;">
                        <i class="bi bi-cart-plus me-1"></i> Add to Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: url(https://www.shutterstock.com/image-vector/musical-notes-symbols-flying-vector-260nw-1418398847.jpg);
        color: #FFFFFF; /* White text */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center"
    }

    .text-purple {
        color: #9B59B6; /* Purple color */
    }

    .bg-purple, .btn-purple, .border-purple {
        background-color: #E6E6FA; /* Purple color */
        border-color: #9B59B6;
        color: #9B59B6;
    }

    .btn-outline-purple {
        color: #FFFFFF;
        background-color: #9B59B6; /* Purple background */
        border-color: #9B59B6;
    }

        .btn-outline-purple:hover {
            background-color: #8e44ad;
            color: #FFFFFF;
        }

    .card {
        background-color: #1C1C1C; /* Darker card background */
        color: #FFFFFF; /* White text */
    }

    .card-header {
        background-color: #333; /* Dark header background */
        border-bottom: 1px solid #9B59B6;
    }

    .img-fluid {
        border-radius: 15px;
    }

    .badge {
        background-color: #9B59B6; /* Purple badge */
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .btn-purple {
        border-radius: 20px;
    }

    .btn-outline-purple {
        color: #9B59B6;
        border-radius: 20px;
    }
</style>
