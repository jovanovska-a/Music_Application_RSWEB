@model Album

@{
    ViewData["Title"] = "Delete Confirmation";
}

<div class="container">
    <div class="row text-white">
        <div class="col-md-8 offset-md-2" style="margin-top: 30px; margin-bottom: 10px;">
            <h4 class="text-purple">Delete Confirmation for @Model.Name</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="form-group text-center mb-4">
                <img class="border-purple rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cover" class="control-label text-purple" style="font-size: 1.1rem;"></label>
                <input asp-for="Cover" class="form-control bg-lighter-dark text-white border-purple" readonly />
                <span asp-validation-for="Cover" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label text-purple" style="font-size: 1.1rem;"></label>
                <input asp-for="Name" class="form-control bg-lighter-dark text-white border-purple" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label text-purple" style="font-size: 1.1rem;"></label>
                <input asp-for="Description" class="form-control bg-lighter-dark text-white border-purple" readonly />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-sm float-right d-flex align-items-center justify-content-center px-4 py-2">
                        <i class="bi bi-trash me-1"></i> Confirm
                    </button>
                </form>
                <a class="btn btn-outline-secondary btn-sm float-left" asp-action="Index">Show All</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#Cover").val();
        });
    </script>
}

<style>
    body {
        background-color: #F3F4F8;
    }

    .text-purple {
        color: #6C5B7B; /* Lighter purple */
        margin-bottom: 3px;
    }

    .form-control.bg-lighter-dark {
        background-color: #444;
        border-color: #6C5B7B; /* Lighter purple */
        color: #FFF;
    }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
        color: white;
        border-radius: 10px;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .btn-outline-secondary {
        border-color: #95a5a6;
        color: #95a5a6;
        border-radius: 10px;
    }

        .btn-outline-secondary:hover {
            background-color: #95a5a6;
            color: white;
        }

    .border-purple {
        border-color: #6C5B7B; /* Lighter purple */
    }
</style>
