<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .navbar-custom {
            background-color: #E6E6FA; /* Lavender background */
            border-bottom: 2px solid #9370DB; /* Dark lavender border */
            height: 80px;
        }

        .navbar-brand {
            font-weight: bold;
            color: #4B0082; /* Indigo color */
        }

        .nav-link, .navbar-nav .dropdown-toggle {
            color: #4B0082; /* Indigo color */
        }

            .nav-link:hover, .navbar-nav .dropdown-toggle:hover {
                color: #6A5ACD; /* Slate blue color */
            }

        .dropdown-menu {
            background-color: #E6E6FA; /* Lavender background */
            border-color: #9370DB; /* Dark lavender border */
        }

        .dropdown-item {
            color: #4B0082; /* Indigo color */
        }

            .dropdown-item:hover {
                background-color: #D8BFD8; /* Thistle color */
            }

        .navbar-custom .btn {
            color: #fff;
            background-color: #9370DB; /* Dark lavender button */
            border: none;
        }

            .navbar-custom .btn:hover {
                background-color: #6A5ACD; /* Slate blue button */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.5rem;">
                    <i class="bi bi-vinyl"></i> MusicMap
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Song" asp-action="Index" style="font-size: 1.2rem;"><i class="bi bi-music-note"></i> Songs</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false" style="font-size: 1.2rem;">
                                <i class="bi bi-gear"></i> View more
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Artist" asp-action="Index"><i class="bi bi-person" style="font-size: 1.2rem;"></i> Artists</a>
                                <a class="dropdown-item" asp-controller="Album" asp-action="Index"><i class="bi bi-disc  style=" font-size: 1.2rem;""></i> Albums</a>
                                <a class="dropdown-item" asp-controller="MusicHouse" asp-action="Index"><i class="bi bi-building" style="font-size: 1.2rem;"></i> Music Houses</a>
                            </div>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-outline-light me-2" href="#" style="font-size: 1.2rem;">Sign Up</a>
                        <a class="btn btn-outline-light" href="#" ="Login" style="font-size: 1.2rem;">Log In</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

