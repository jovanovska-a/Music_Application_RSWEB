@using MusicApplication.ViewModels
@model CreateReviewViewModel
@{
    ViewData["Title"] = "Add a New Review";
}

<div class="container">
    <div class="row text-white">
        <div class="col-md-8 offset-md-2" style="margin-top: 30px; margin-bottom: 10px;">
            <h4 class="text-purple">Add a New Review</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <input type="hidden" asp-for="Review.SongId" value="@Model.Review.SongId" />
                </div>
                <div>
                    <input type="hidden" asp-for="Review.AppUser" value="@Model.Review.AppUser" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="control-label text-purple" style="font-size: 1.1rem;"></label>
                    <input asp-for="UserName" class="form-control bg-lighter-dark text-white border-purple" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Review.Comment" class="control-label text-purple" style="font-size: 1.1rem;"></label>
                    <textarea asp-for="Review.Comment" class="form-control bg-lighter-dark text-white border-purple"></textarea>
                    <span asp-validation-for="Review.Comment" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Review.Rating" class="control-label text-purple" style="font-size: 1.1rem;"></label>
                    <input asp-for="Review.Rating" class="form-control bg-lighter-dark text-white border-purple" />
                    <span asp-validation-for="Review.Rating" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-purple btn-sm float-right d-flex align-items-center justify-content-center px-4 py-2">
                        <i class="bi bi-plus-square me-1"></i> Submit Review
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Any custom scripts related to the review form can go here
    </script>
}

<style>
    body {
        background-color: #F3F4F8;
    }

    .text-purple {
        color: #6C5B7B; /* Lighter purple */
        margin-bottom: 3px;
    }

    .form-control.bg-lighter-dark {
        background-color: #444;
        border-color: #6C5B7B; /* Lighter purple */
        color: #FFF;
    }

    .btn-purple {
        background-color: #6C5B7B; /* Lighter purple */
        border-color: #6C5B7B; /* Lighter purple */
        color: white;
        border-radius: 10px;
        padding: 10px 20px; /* Increased padding */
    }

        .btn-purple:hover {
            background-color: #8A6D8E; /* Slightly lighter on hover */
            color: #FFF;
        }

    .border-purple {
        border-color: #6C5B7B; /* Lighter purple */
    }
</style>
