@model Review
@{
    ViewData["Title"] = "Edit Review";
}

<div class="container">
    <div class="row text-white">
        <div class="col-md-8 offset-md-2" style="margin-top: 30px; margin-bottom: 10px;">
            <h4 class="text-purple">Edit this Review</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="AppUser" hidden />
                <input asp-for="SongId" hidden />

                <div class="form-group mb-3">
                    <label asp-for="Comment" class="control-label text-purple" style="font-size: 1.1rem;"></label>
                    <input asp-for="Comment" class="form-control bg-lighter-dark text-white border-purple" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Rating" class="control-label text-purple" style="font-size: 1.1rem;"></label>
                    <input asp-for="Rating" class="form-control bg-lighter-dark text-white border-purple" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-purple float-right d-flex align-items-center justify-content-center px-4 py-2">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ImageUrl").val();
        });
        $("#ImageUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        });
    </script>
}

<style>
    body {
        background-color: #F3F4F8;
    }

    .text-purple {
        color: #6C5B7B; /* Lighter purple */
        margin-bottom: 3px;
    }

    .form-control.bg-lighter-dark {
        background-color: #444;
        border-color: #6C5B7B; /* Lighter purple */
        color: #FFF;
    }

    .btn-purple {
        background-color: #6C5B7B; /* Lighter purple */
        border-color: #6C5B7B; /* Lighter purple */
        color: white;
        border-radius: 10px;
        padding: 10px 20px; /* Increased padding */
    }

        .btn-purple:hover {
            background-color: #8A6D8E; /* Slightly lighter on hover */
            color: #FFF;
        }

    .border-purple {
        border-color: #6C5B7B; /* Lighter purple */
    }
</style>
