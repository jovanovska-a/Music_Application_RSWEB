@model MusicHouse

@{
    ViewData["Title"] = "Details of the Music House";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card bg-dark text-white border-purple shadow-lg square-card">
                <div class="card-header text-center bg-gradient">
                    <h2 class="text-purple mb-0">@Model.Name</h2>
                </div>
                <div class="card-body d-flex flex-column align-items-center">
                    <img src="@Model.ProfilePictureUrl" alt="@Model.Name" class="img-fluid border-purple mb-3" style="width: 200px; height: 200px; object-fit: cover;">
                    <p class="card-text mb-2" style="font-size: 1.1rem;">
                        @Model.Bio
                    </p>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All Music Houses</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: url(https://www.shutterstock.com/image-vector/musical-notes-symbols-flying-vector-260nw-1418398847.jpg);
        color: #FFFFFF; /* White text */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }

    .text-purple {
        color: #9B59B6; /* Purple color */
    }

    .bg-gradient {
        background: linear-gradient(135deg, #9B59B6, #E6E6FA);
    }

    .bg-purple, .btn-purple, .border-purple {
        background-color: #E6E6FA; /* Purple color */
        border-color: #9B59B6;
        color: #9B59B6;
    }

    .btn-outline-purple {
        color: #FFFFFF;
        background-color: #9B59B6; /* Purple background */
        border-color: #9B59B6;
    }

        .btn-outline-purple:hover {
            background-color: #8e44ad;
            color: #FFFFFF;
        }

    .card {
        background-color: #1C1C1C; /* Darker card background */
        color: #FFFFFF; /* White text */
        border: 1px solid #9B59B6;
        border-radius: 3px; /* Rounded corners */
    }

    .square-card {
        border: 1px solid #9B59B6;
    }

    .card-header {
        background-color: #333; /* Dark header background */
        border-bottom: 1px solid #9B59B6;
        padding: 15px;
    }

    .img-fluid {
        border: 2px solid #E6E6FA;
    }

    .card-body {
        padding: 20px;
        text-align: center;
    }

    .btn-purple {
        border-radius: 20px;
    }

    .btn-outline-purple {
        color: #9B59B6;
        border-radius: 20px;
    }

    .card-footer {
        background-color: #1C1C1C; /* Dark footer background */
        border-top: 1px solid black;
        padding: 10px;
    }
</style>
